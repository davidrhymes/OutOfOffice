@model ApprovalReq

<form asp-action="Edit" method="post" enctype="multipart/form-data">
	<div class="form-group">
		<input type="hidden" asp-for="ID" />
		<input type="hidden" asp-for="ApproverID" class="form-control" />
		<input type="hidden" asp-for="LeaveRequestID" class="form-control" />
	</div>

	<div class="form-group">
		<p>This employee has @ViewBag.daysOff days off, after confirmation it will be @ViewBag.daysOffResult</p>
		<label asp-for="Status">Status:</label>
		<select id="Select" class="form-control">
			<option value="Approved">Approve</option>
			<option value="Declined">Decline</option>
		</select>
		<input type="hidden" id="FKid" asp-for="Status" class="form-control" />
	</div>

	<div class="form-group">
		<label asp-for="Comment">Comment:</label>
		<input asp-for="Comment" class="form-control" />
		<span asp-validation-for="Comment" class="text-danger"></span>
	</div>

	<button type="submit" class="btn btn-primary">Edit</button>
	<a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

<script src="/js/SelectionChange.js"></script>