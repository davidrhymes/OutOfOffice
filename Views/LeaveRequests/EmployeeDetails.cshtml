@model OutOfOffice.Models.LeaveReq

<h1>Leave Request Details</h1>
<table>
	<thead>
		<tr>
			<th>
				ID
			</th>
			<th>
				EmployeeID
			</th>
			<th>
				Absence Reason
			</th>
			<th>
				Start Date
			</th>
			<th>
				End Date
			</th>
			<th>
				Comment
			</th>
			<th>
				Status
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td>
				@Model.ID
			</td>
			@if (Model.Employee != null)
			{
				<td>
					@Model.Employee.FullName / #@Model.EmployeeID
				</td>
			}
			else
			{
				<td>
					@Model.EmployeeID
				</td>
			}
			<td>
				@Model.AbsenceReason
			</td>
			<td>
				@Model.StartDate
			</td>
			<td>
				@Model.EndDate
			</td>
			<td>
				@Model.Comment
			</td>
			<td>
				@Model.Status
			</td>
			@if (!Model.Status.Equals("Approved") && !Model.Status.Equals("Declined"))
			{
				<td>
					<a href="/leavereq/editform/@Model.ID">EDIT</a>
					<a href="/leavereq/deleteform/@Model.ID">DELETE</a>
				</td>
			}
			else
			{
				<td>
					
				</td>
			}
		</tr>
	</tbody>
</table>
